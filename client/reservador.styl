body, html {
  width: 100%;
}

body {
  color: #5F5F5F;
  width: 100%;
}

.wrapper {
  width: 950px;
  margin: 0 auto;
  padding: 0 40px;
}

.firstMessage {
  width: 50%;
  margin: 0 auto;
  line-height: 20px;
  text-align: center;

  h1 {
    font-size: 20px;
    padding-top: 400px;
    background-image: url('pelota.png');
    background-size: 250px;
    background-repeat: no-repeat;
    background-position: center center;
    text-align: center;
    margin-top: 0;
  }
}

.logged {
  margin: 0 auto;
  text-align: center;
}

.user-block {
  width: 100%;
  text-align: right;
}

.user-image {
  display: inline-block;
  vertical-align: top;
}

.user {
  width: 10%;
  display: inline-block;
  vertical-align: top;
  text-align: center;
  cursor: pointer;
  padding: 15px;
  position: relative;

  img {
    width: 90px;
  }
}

.players-list {
  text-align: left;
}

.userName {
  font-weight: bold;
}

.games-list {
  margin-top: 100px;
}

.addMatch {
  display: block;
  height:100%;
  width: 100%;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 2;
}

.game-unit {
  margin: 20px 0;
  height: 100px;

  &:hover {
    background: #f8f8f8;
  }
}

.firstPlayer, .versus, .secondPlayer {
  display: inline-block;
  vertical-align: top;
}

.player-name, .player-pic {
  height: 100%;
  display: inline-block;
  vertical-align: top;
}

.player-name {
  font-size: 30px;
  padding-top: 15px;
  padding-right: 15px;
  width: 270px;
  text-align: center;
  line-height: 68px;
}

.versus {
  padding-top: 15px;
  font-size: 25px;
  margin: 0 50px;
}

.timeAgo {
  color: #888888;
  font-size: 17px;
}

.player-pic {
  img {
    max-width: 50px;
    padding-top: 17px;
  }
}

.endGame, .finished {
  font-size: 13px;
}

.finished {
  color: red;
}

.first-layer {
  height: 636px;
}
